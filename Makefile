CC = g++
FLAGS = -Wall -std=c++20 

#-----------------------------------------
#Optimization ----------------------------
OPT = -O3 

#-----------------------------------------
#-----------------------------------------

TARGETS = trace
OBJECTS = trace.o slVector.o

#-----------------------------------------
# 
INCS = 
LIBS =

CCOPTS = $(OPT) $(FLAGS) $(INCS)  
LDOPTS = $(OPT) $(LIBS)

#-----------------------------------------
#-----------------------------------------


default: $(TARGETS) 

clean:
	/bin/rm -fv *.o $(TARGETS) 

#-----------------------------------------
#-----------------------------------------

trace: $(OBJECTS) trace.H
	$(CC) $(LDOPTS) -o trace $(OBJECTS) -ltbb


#-----------------------------------------

trace.o: trace.cpp trace.H slIO.H slVector.H 

.cpp.o: 
	$(CC) $(CCOPTS) -c $< -o $@

#-----------------------------------------
#-----------------------------------------
